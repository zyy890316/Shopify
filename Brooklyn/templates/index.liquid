<!-- Homepage Featured Products -->
<div class="container-fluid product-collections" id="products">
  <div class="row collection-title">
    <h4 class="section-title section-title-center">
      <b></b>
      <span class="section-title-main">Best-selling Pawducts</span>
      <b></b>
    </h4>
  </div>
  <div class="row">
    {% for collection in collections %}
      {% if collection.title contains 'Home'%}
        {% for product in collection.products %}
          {% if forloop.index <= 4 %}
            <!--show product card here -->
            {%- assign image = product.featured_image -%}
            {% assign on_sale = false %}
            {% if product.compare_at_price > product.price %}
              {% assign on_sale = true %}
            {% endif %}
            <div class="card-col col-md-3 col-sm-6 col-6" >
              <div class="card">
                <a class="grid-product__image-link" href="{{ product.url | within: collection }}" data-image-link>
                  <img class="card-img-top img-fluid lazyload"
                       src="{{ image | img_url: '300x300' }}"
                       data-src="{{ image| img_url: '1200x1200' }}"
                       data-widths="[180, 370, 590, 740, 900, 1080, 1296, 1512, 1728, 2048]"
                       data-aspectratio="{{ product.featured_image.aspect_ratio }}"
                       data-sizes="auto"
                       alt="{{ product.featured_image.alt | escape }}"
                       data-image>
                </a>
                {% if on_sale %}
                  <div class="grid-product__on-sale">
                    {% capture saved_amount %}{{ product.compare_at_price | minus: product.price | money_without_trailing_zeros }}{% endcapture %}
                    <p>{{ 'products.general.save_html' | t: saved_amount: saved_amount }}</p>
                  </div>
                {% endif %}

                <div class="card-body">
                  <a href="{{ product.url | within: collection }}">
                    <h6 class="card-title">{{ product.title }}</h6>
                    <span>{% include 'product-price', variant: product.selected_or_first_available_variant %}</span>
                  </a>
                  <a href="#looxReviews"><div class="loox-rating" data-id="{{ product.id }}" data-rating="{{ product.metafields.loox.avg_rating }}" data-raters="{{ product.metafields.loox.num_reviews }}" style="margin-bottom:15px"></div></a>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  </div>
</div>
<!-- Homepage Featured Products End -->

<!-- Homepage Art Style -->
{% assign artStyles = "OilPaint,Classic,WPAP,PolyArt,WaterColor" | split: "," %}
<div class="container-fluid art-container">
  <div class="row collection-title">
    <h4 class="section-title section-title-center">
      <b></b>
      <span class="section-title-main">4 Unique Art Styles!</span>
      <b></b>
    </h4>
  </div>
  <!-- <h6>ðŸ’¡Pro tip: Click on image to see a larger version and the art style details.ðŸ’¡</h6> -->
  <div class="row">
    {% for artStyle in artStyles %}
      {% case artStyle %}
      {% when 'OilPaint' %}
         {% assign title = "OilPaint" %}
         {% assign text = "OilPaint Best for Pupies!" %}
      {% when 'Classic' %}
        {% assign title = "Classic" %}
        {% assign text = "Classic Best for Pupies!" %}
      {% when 'WPAP' %}
        {% assign title = "WPAP" %}
        {% assign text = "WPAP Best for Pupies!" %}
      {% else %}
      {% when 'PolyArt' %}
        {% assign title = "PolyArt" %}
        {% assign text = "PolyArt Best for Pupies!" %}
      {% when 'WaterColor' %}
        {% assign title = "WaterColor" %}
        {% assign text = "WaterColor Best for Pupies!" %}
      {% else %}
        {% assign title = "PolyArt" %}
        {% assign text = "PolyArt Best for Pupies!" %}
      {% endcase %}
      <div class="card-col col-md-3 col-sm-6 col-6" >
        <a href="{{ artStyle | append: ".png" | asset_img_url: '1000x' }}" data-lightbox="artStyles" data-title="{{ text }}">
          <img src="{{ artStyle | append: ".png" | asset_img_url: '300x' }}" class="card-img-top rounded border lazyload fade-in"
          alt="{{ artStyle }}"
          data-src="{{ artStyle | append: ".png" | asset_img_url: '1000x' }}"
          data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]"
          data-sizes="auto"
          data-parent-fit="cover">
        </a>
        <div class="card-body">
          <h6 class="card-title">{{ title }}</h6>
          <span class="card-subtitle mb-2 text-mute">{{ text }}</span>
        </div>
      </div>
    {% endfor %}
  </div>
  <a href="/collections/all" class="mb-4 btn btn-grad btn-lg" role="button" aria-pressed="true">Shop Now</a>
</div>
<script>
lightbox.option({
  'alwaysShowNavOnTouchDevices': true,
  'wrapAround': true
})
</script>
<!-- Homepage Art Style End -->

