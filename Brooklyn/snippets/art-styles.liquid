<!-- Homepage Art Style -->
{% assign artStyles = "Classic,PolyArt,OilPaint,WPAP,WaterColor" | split: "," %}
<div class="container-fluid art-container">
  <div class="row collection-title">
    <h4 class="section-title section-title-center">
      <b></b>
      <span class="section-title-main">5 Unique Art Styles!</span>
      <b></b>
    </h4>
  </div>
  <!-- <h6>ðŸ’¡Pro tip: Click on image to see a larger version and the art style details.ðŸ’¡</h6> -->
  <div class="row">
    {% for artStyle in artStyles %}
      {% case artStyle %}
      {% when 'Classic' %}
        {% assign title = "Classic" %}
        {% assign text = "Our best selling style, vectorize your Furbaby in a unique way with enhanced details!" %}
      {% when 'OilPaint' %}
         {% assign title = "Oil Paint" %}
         {% assign text = "When it comes to capturing and conveying the unique personality traits of your furbaby, oil paint is the one to go!" %}
      {% when 'WPAP' %}
        {% assign title = "WPAP" %}
        {% assign text = "Want to tell the world how special your furbaby is? WPAP is the best way to feel the sensation!" %}
      {% else %}
      {% when 'PolyArt' %}
        {% assign title = "PolyArt" %}
        {% assign text = "Ever imagined your pet in pixel world? Try out our PolyArt style, you'll be supprised how cute they are in minecraft!" %}
      {% when 'WaterColor' %}
        {% assign title = "Watercolor" %}
        {% assign text = "It usually take us slightl longer to give your pet this vivid look by using digital watercolor, but it worth the waiting!" %}
      {% else %}
        {% assign title = "PolyArt" %}
        {% assign text = "PolyArt Best for Pupies!" %}
      {% endcase %}
      <div class="card-col col-md-3 col-sm-6 col-6" >
        <a href="{{ artStyle | append: ".png" | asset_img_url: '1000x' }}" data-lightbox="artStyles" data-title="{{ text }}">
          <img src="{{ artStyle | append: ".png" | asset_img_url: '300x' }}" class="card-img-top rounded border lazyload fade-in"
          alt="{{ artStyle }}"
          data-src="{{ artStyle | append: ".png" | asset_img_url: '1000x' }}"
          data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]"
          data-sizes="auto"
          data-parent-fit="cover">
        </a>
        <div class="card-body">
          <h6 class="card-title">{{ title }}</h6>
          <span class="card-subtitle mb-2 text-mute">{{ text }}</span>
        </div>
      </div>
    {% endfor %}
  </div>
  <a href="/collections/all" class="mb-4 btn btn-grad btn-lg" role="button" aria-pressed="true">Customize For My Furbaby</a>
</div>
<script>
lightbox.option({
  'alwaysShowNavOnTouchDevices': true,
  'wrapAround': true
})
</script>
<!-- Homepage Art Style End -->
