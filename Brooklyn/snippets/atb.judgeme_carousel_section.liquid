{% comment %}
ATB-SCHEMA{
  "name": "Featured Review Carousel",
  "id": "judgeme_carousel_section",
  "banner": "",
  "icon": "",
  "tags": "",
  "description": "",
  "class": "",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "info": "Enter a unique ID with only letters and numbers, no spaces",
      "default": ""
    },
    {
      "type": "range",
      "id": "atb_maxwidth",
      "min": 480,
      "max": 1920,
      "step": 40,
      "unit": "px",
      "label": "Maximum width",
      "default": 1080,
      "info": ""
    }
  ],
  "warnings": []
}ATB-SCHEMA
{% endcomment %}


{% include 'atb-render' field:'section_id' %}
{% assign section_id = val %}
{% include 'atb-render' field:'atb_maxwidth' %}
{% assign atb_maxwidth = val %}
{% assign atb_maxwidth = atb_maxwidth | plus: 0 %}

<section id="shopify-section-{{section_id}}" class="shopify-section ">
{% comment %} Please do not edit this file. It is automatically updated by Judge.me{% endcomment %}


<div style="margin:0 auto;max-width:{{atb_maxwidth}}px;">
  {% include 'judgeme_widgets', widget_type: 'judgeme_featured_carousel', concierge_install: false %}
</div>
</section>